---
interface Props {
	title: string;
	body: string;
	imageUrl: string;
}

const { title, body, imageUrl } = Astro.props;
---

	<li class="flex gap-2 flex-col bg-[#F7FFF1] p-6 rounded-3xl ">
		<div class="w-full">
			<img  class="rounded-xl object-cover w-full h-[250px]" src={imageUrl} alt="image">
		</div>
		<p class="text-2xl text-black font-semibold ">
			{title}
		</p>
		<p class="text-black">
			{body}
		</p>
	</li>

