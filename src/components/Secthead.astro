---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

	<li class="flex gap-4 flex-col p-6 rounded-3xl max-w-2xl items-center">
		<h2 class="text-[52px] text-center font-bold text-black">
			{title}
		</h2>
		<p class="text-black text-center">
			{description}
		</p>
	</li>

